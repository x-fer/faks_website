---
interface Props {
  profile: string;
  name: string;
  title: string;
  type: string;
  about: string;
  text: string;
  date: string;
}

const { profile, name, title, type, about, text, date } = Astro.props;
---

<div class="my-10 grid w-full grid-cols-3 grid-rows-1 gap-4 py-2">
  <div class="col-span-1 flex flex-col gap-2">
    <div class="flex justify-center">
      <img src={profile} class="w-4/6 rounded-full border-2" />
    </div>
    <div class="text-center text-lg font-bold text-[#D2D2D2] italic">
      {name}
    </div>
  </div>
  <div class="col-span-2 flex flex-col gap-4">
    <div class="flex flex-row gap-4">
      <div
        class="flex w-20 items-center justify-center rounded-md border-2 border-[#930035] bg-[#2E0F0F] text-2xl text-[#D2D2D2]"
      >
        {
          type === "tech" ? (
            <div class="color-[#BCBCBC] text-sm">TECH</div>
          ) : (
            <div class="color-[#BCBCBC] text-sm">POLICY</div>
          )
        }
      </div>
      <div class="text-lg font-bold text-[#D2D2D2]">
        {title}
      </div>
    </div>
    <div
      class="container flex w-full flex-col gap-6 rounded-md border-2 border-[#4A4A4A] bg-black px-12 py-4"
    >
      <div class="flex flex-col gap-2">
        <div class="font-bold text-[#007EFF]">ABOUT THE SPEAKER</div>
        <div class="text-[#C7C7C7] italic">
          {about}
        </div>
      </div>
      <div class="flex flex-col gap-2">
        <div class="font-bold text-[#DB062E]">ABOUT THE TALK</div>
        <div class="text-[#F5F5F5]">
          {text}
        </div>
      </div>
      <div class="text-lg font-bold text-[#F5F5F5]">
        {date}
      </div>
    </div>
  </div>
</div>
