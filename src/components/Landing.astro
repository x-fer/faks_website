---
import "@styles/global.css";
---

<div
  class="bg-transparent bg-[url(/background.svg)] bg-no-repeat bg-cover bg-center w-screen h-screen"
>
  <div class="container mx-auto">
    <div class="grid grid-cols-3 grid-rows-1 py-2 h-screen">
      <div class="col-span-2 my-auto">
        <div class="flex flex-col gap-20">
          <div class="flex flex-col items-center">
            <img src="/FAKS.svg" class="w-full" />
          </div>
          <div class="flex justify-between items-center mx-4">
            <div class="flex gap-2 flex-row items-center">
              <div>
                <img src="/lp/calendar.svg" class="w-3/4" alt="calendar" />
              </div>
              <div class="bg-[#9E0035] w-0.5 h-12"></div>
              <div class="text-[#CCCCCC] font-bold">7. i 8. lipnja 2025.</div>
            </div>
            <div class="flex gap-2 flex-row items-center">
              <div>
                <img src="/lp/location.svg" class="w-3/4" alt="location" />
              </div>
              <div class="bg-[#9E0035] w-0.5 h-12"></div>
              <div class="text-[#CCCCCC] font-bold">FER, Unska 3, Zagreb</div>
            </div>
          </div>
        </div>
      </div>
      <div class="my-auto">
        <img src="/hero.svg" class="mainHero" />
      </div>
    </div>
  </div>
</div>
